<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
       <label class="label label-success"> 已收藏本電影 </label>
        <%= link_to("解除收藏", quit_group_path(@group), method: :post, class: "btn btn-default") %>

      <% else %>
       <label class="label label-warning"> 尚未收藏本電影 </label>
        <%= link_to("加入收藏", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("評論本電影", new_group_post_path(@group), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @group.user %>
     <%= link_to("編輯內容", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %> </p>

  <table class="table">
    <thead>
      <tr>
        <th>評論內容</th>
        <th>發表者</th>
        <th>發表時間</th>
      </tr>
    </thed>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
